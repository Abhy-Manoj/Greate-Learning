<h2>Employee Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="table-Container">
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeName)
