@{
    ViewBag.Title = "CreateAdmin";
    Layout = "~/Views/Shared/examplelayout.cshtml";
}

@using myproject.Models
@model Admin
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/CSS/CCourse.css" rel="stylesheet" />
    <script src="~/javascript/Adminvalid.js"></script>
    <link href="~/CSS/Adminhome.css" rel="stylesheet" />
</head>
<body>
    <h2>Add Admin</h2>

    <div style="margin: 20px; padding: 10px; border: 1px solid #ccc; border-radius: 5px; width: 300px;">
        @using (Html.BeginForm("Create", "Newadmin", FormMethod.Post, new { id = "adminForm" }))
        {
            <div class="form-group">
                <span>Name:</span>
                @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter Admin Name", required = "required" })
                <div class="validation-error" id="UsernameError"></div>
            </div>

            <div class="form-group">
                <span>Email:</span>
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Admin Email", required = "required" })
                <div class="validation-error" id="EmailError"></div>
            </div>

            <div class="form-group">
                <span>Password:</span>
                @Html.PasswordFor(m => m.Password, new { placeholder = "Enter Admin Password", required = "required" })
                <div class="validation-error" id="PasswordError"></div>
            </div>

            <div class="form-group">
                <span>Confirm Password:</span>
                <input type="password" id="ConfirmPassword" placeholder="Confirm Admin Password" required="required">
                <div class="validation-error" id="ConfirmPasswordError"></div>
            </div>
            <br />

            <input id="Submit" type="submit" value="Add Admin" />
        }
    </div>
    <div id="validationErrors" class="text-danger"></div>
</body>
</html>